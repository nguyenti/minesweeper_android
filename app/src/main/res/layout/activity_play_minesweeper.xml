<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hu.ait.tiffanynguyen.minesweeper.PlayMinesweeperActivity"
    android:orientation="vertical">

    <hu.ait.tiffanynguyen.minesweeper.MinesweeperView
        android:id="@+id/minesweeperView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/minesweeperView"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ToggleButton
            android:id="@+id/btnFlag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:textOn="FLAG"
            android:textOff="NO FLAG"
            android:text="@string/btnTextPlaceFlag"  />

        <Button
            android:id="@+id/btn_restart"
            android:layout_weight="5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/restart_label"/>
        
        </LinearLayout>

</RelativeLayout>
